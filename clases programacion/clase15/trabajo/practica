// 4 - Resultado/formato final esperado por la función triangulos: "El triangulo es Isosceles y su perímetro es 10"

// Herramientas a utilizar: if ternario, funciones flechas y el método "isNaN()" (INVESTIGARLO!)

let calcularPerimetro = (lado1,lado2,lado3) => {
    let perimetro = lado1 + lado2 + lado3;
    return perimetro
}

let tipoTriangulo = (l1,l2,l3) => {
    let tipo =
     l1 === l2 && l2 === l3 && l3 === l1 ? 
    "Equilátero" : 
    l1 === l2 || l3 === l1 || l2 === l3 ?
    "Isósceles" :
    "Escaleno" ;
   
    return tipo;
} ;


let nombre = "Tiago" ;
let apellido = "Cuello" ;
let sueldoActual = 500 ;
let porcentajeAumento = 70 ; 
let aumentoDeSueldo = (sueldoActual * porcentajeAumento)/100 ;

console.log("hola estimado " + nombre + apellido) ;
console.log("su sueldo actual es:" + sueldoActual) ;
console.log("resibio un aumento del " + porcentajeAumento + "%" ) ;
console.log("su nuevo sueldo es de:" + aumentoDeSueldo) ;











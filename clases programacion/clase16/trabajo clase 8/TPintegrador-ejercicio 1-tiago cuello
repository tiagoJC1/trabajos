let cursos = [
["html5",4000],
["css3",5000],
["javascript",10000],
["react",7000], 
["nodejs", 15000] 
] ;

let cursosElegidos = ["HTML5", "CSS3", "JAVASCRIPT", "REACT" , "NODEJS"]  

let total = (cursos,lista) => {
    let total = 0 ;
    for (let i = 0 ; i < cursos.length; i++ ) {
        let curso = cursos[i] ;
        let nombreCuso = curso[0] ;
        let precioCurso = curso[1] ;

        if(lista.includes(nombreCuso.toUperCase())){
        total += precioCurso ;
    }
  }   
  return total ;
} ;

